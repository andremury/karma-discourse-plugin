{{#if (and siteSettings.Show_proposal_banner shouldShow)}}
  <div class="wrap __banner-link-banner">
    <div class="__banner-wrapper">
      <div class="__banner-content-wrapper">
        <div class="__banner-content">
          <h2>{{siteSettings.Banner_title}}</h2>
          <p>{{siteSettings.Banner_description}}</p>
        </div>
        <div class="links-wrapper">
          <div class="featured-banner-link">
            {{#each bannerLinks as |link|}}
              {{#if link.url}}
                <div>
                  <a href="{{link.url}}">
                    <h3>
                      {{d-icon link.icon}}
                      <span>{{link.text}}</span>
                    </h3>
                  </a>
                </div>
              {{/if}}
            {{/each}}
          </div>
        </div>
      </div>
      <div style="margin-bottom:2em">
        {{#if (not fetched)}}
          <div class="proposals-loading" style="width:100%;text-align:center">
            {{d-icon "circle"}}
            {{d-icon "circle"}}
            {{d-icon "circle"}}
          </div>
        {{else}}
          {{#if (not proposals.length)}}
            <h4 style="text-align:center;">
              No active proposals found.
            </h4>
          {{/if}}
        {{/if}}
      </div>
      <div
        class={{concat "wrap active-proposals-wrapper" " " openClass}}
        style={{concat "height: " bannerHeight ";"}}
      >
        {{#each proposals as |proposal|}}
          <div class="proposal">
            <div class="proposal-title">
              <div class="proposal-description">{{html-safe
                  proposal.title
                }}</div>
            </div>
            <div class="proposal-due-date">
              {{proposal.type}}
              -
              {{proposal.voteCount}}
              votes - Due date:
              {{proposal.endsAt}}</div>
          </div>
        {{/each}}

      </div>
      {{#if (gte proposals.length 2)}}
        <div
          class={{concat "reveal-more-button" " " openClass}}
          onclick={{toggleBanner}}
        >
          {{d-icon "chevron-down"}}
        </div>
      {{/if}}
    </div>
  </div>
{{/if}}
