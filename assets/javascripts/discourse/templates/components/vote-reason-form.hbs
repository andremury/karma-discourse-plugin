{{#if siteSettings.Show_vote_reason_form}}
  {{#unless hasSetReason}}
    <button
      type="button"
      class="__karma-send-reason-btn k-btn btn-info"
      onClick={{toggleModal}}
    >
      Submit a reason
    </button>
    {{#if loading}}
    {{else}}
      <div id="__karma-vote-form-modal" style="display:none">
        <div class="backdrop" onClick={{toggleModal}}>
        </div>
        <form onSubmit={{submit}}>
          <div class="modal-content">
            <div class="form-reason">
              <label for="reason">
                Submit a reason:
              </label>
              <textarea
                name="reason"
                placeholder="I voted FOR, because I believe this is a good proposal."
                value={{form.reason}}
                onkeyup={{setReason}}
              ></textarea>
              <br />
            </div>
            <div class="footer">
              <button
                type="button"
                class="k-btn btn-danger"
                onClick={{toggleModal}}
              >
                Cancel
              </button>
              <button type="submit" class="k-btn btn-success">
                Send
              </button>
            </div>
          </div>
        </form>
      </div>
    {{/if}}
  {{/unless}}
{{/if}}
